<div class="row justify-content-center">
  <div class="col-lg-6">
    <%= form_with(model: @registration, url: registrations_path, class: "form") do |form| %>
      <%= form.hidden_field :id_user, value: current_user.id %>
      <%= form.hidden_field :id_event , value: @event_id %>
      <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :firstname, class: "form-label" %>
        <%= form.text_field :firstname, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :lastname, class: "form-label" %>
        <%= form.text_field :lastname, class: "form-control" %>
      </div>

      <%= form.submit "Confirm Registration", class: "btn btn-danger mt-4" %>
    <% end %>
  </div>
</div>
